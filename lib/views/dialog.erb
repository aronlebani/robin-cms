<dialog id="<%= id %>">
	<h2><%= heading %></h2>
	<p>
		<%= body %>
		<% if danger %>
			This is a permanent action and it cannot be undone.
		<% end %>
	</p>
	<div class="controls">
		<form id="dialog-close" method="dialog">
			<button type="submit" form="dialog-close">Close</button>
		</form>
		<form id="dialog-action" action="<%= action %>" method="post">
			<button
				type="submit"
				form="dialog-action"
				class="<%= danger ? '--danger' : '' %>"
			>
				<%= button_label %>
			</button>
		</form>
	</div>
</dialog>
