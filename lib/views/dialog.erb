<dialog id="<%= id %>">
	<h2><%= heading %></h2>
	<p>
		<%= body %>
		<% if danger %>
			This is a permanent action and it cannot be undone.
		<% end %>
	</p>
	<div class="controls">
		<form method="dialog">
			<button>Close</button>
		</form>
		<form action="<%= action %>" method="post">
			<button class="<%= danger ? '--danger' : '' %>">
				<%= button_label %>
			</button>
		</form>
	</div>
</dialog>
