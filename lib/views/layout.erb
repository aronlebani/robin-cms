    <style>
      #editor {
        height: 16rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Admin</h1>
			<a href="/<%= settings.base_route %>/logout">Log out</a>
			<h2>Collections</h2>
      <nav>
        <ul>
          <% for collection in @collections %>
            <li>
							<a href="/<%= settings.base_route %>/collections/<%= collection.id %>">
                <%= collection.label %>
              </a>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>
